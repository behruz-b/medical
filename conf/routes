# An example controller showing a sample home page
GET     /                                           @controllers.HomeController.index(language = "uz")
GET     /reg                                        @controllers.HomeController.index(language = "uz")

GET     /admin                                      @controllers.HomeController.index(language = "uz")

GET     /login                                      @controllers.HomeController.login(lang: String ?= "uz")

POST    /login                                      @controllers.HomeController.loginPost
GET     /logout                                     @controllers.HomeController.logout

GET     /doc                                        @controllers.HomeController.addAnalysisResult(language = "uz")
POST    /doc                                        @controllers.HomeController.uploadAnalysisResult

POST    /doctor                                     @controllers.HomeController.createDoctor
POST    /patient                                    @controllers.HomeController.createPatient
GET     /r/:customerId                              @controllers.HomeController.analysisResult(customerId)

GET     /patients                                   @controllers.HomeController.getPatientsTemplate()
GET     /get-patients                               @controllers.HomeController.getPatients

GET     /stats                                      @controllers.HomeController.getStatisticTemplate()
GET     /getStats                                   @controllers.HomeController.getStats

POST    /stub-sms                                   @controllers.HomeController.stubSmsRequest
POST    /stub-sms/status                            @controllers.HomeController.stubSmsDeliveryStatus

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)
->      /webjars                                     webjars.Routes